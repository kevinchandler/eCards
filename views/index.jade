extends layout

block content
  include navbar.html
  p 
  div(class='col-md-8 col-xs-12')
    if !locals.SuccessMessage
      span(class='today alert alert-warning') Our servers say today is #{day}
    if locals.ErrorMessage  
      span(class='alert alert-danger message') #{ErrorMessage}
    if locals.SuccessMessage
      span(class='alert alert-success message') #{SuccessMessage}
      br
  div(class='col-md-6 col-md-offset-6 col-xs-12')
  form(action='#{base_url}/save', method='post')
    div(class='col-md-4 col-md-offset-4')
      h3
         span(class='glyphicon glyphicon-user')
         |  to
      input(type='email' name='toEmail' placeholder='Email of person to send greeting to' required)
      br
      input(type='text' name='toName' placeholder='Person\'s name' required)
      h3
        span(class='glyphicon glyphicon-envelope')
        |  from
      input(type='text' name='fromName' placeholder='Your name (As shown on card)' required)
      br
      input(type='email' name='fromEmail' placeholder='Your email' required)
      br
      input(type='hidden' name='sent' value='false')
      textarea(type='text' name='message' placeholder='Message to be shown on card' required)
    div(class='col-md-4')
      h3
        span.slideUp(class='glyphicon glyphicon-plane')
        |  delivery info
      ul
        Christmas
        select(name='cardType' required)
          option(value='')='eCard Type'
          //need to implement more templates!!!!!!!
          option(value='Christmas')='Christmas'
        select(name='toMonth' required)
           option(value='')='Delivery Month'
           option(value='0')='January'
           option(value='1')='February'
           option(value='2')='March'
           option(value='3')='April'
           option(value='4')='May'
           option(value='5')='June'
           option(value='6')='July'
           option(value='7')='August'
           option(value='8')='September'
           option(value='9')='October'
           option(value='10')='November'
           option(value='11')='December'
        select(name='toDay' required) 
           option(value='')='Delivery Day'
           option(value='1')='1'
           option(value='2')='2'
           option(value='3')='3'
           option(value='4')='4'
           option(value='5')='5'
           option(value='6')='6'
           option(value='7')='7'
           option(value='8')='8'
           option(value='9')='9'
           option(value='10')='10'
           option(value='11')='11'
           option(value='12')='12'
           option(value='13')='13'
           option(value='14')='14'
           option(value='15')='15'
           option(value='16')='16'
           option(value='17')='17'
           option(value='18')='18'
           option(value='19')='19'
           option(value='20')='20'
           option(value='21')='21'
           option(value='22')='22'
           option(value='23')='23'
           option(value='24')='24'
           option(value='25')='25'
           option(value='26')='26'
           option(value='27')='27'
           option(value='28')='28'
           option(value='29')='29'
           option(value='30')='30'
           option(value='31')='31'
        br
        button(type='submit' class='btn-lg btn-success') Submit&nbsp;&nbsp;&nbsp;  
          span(class='glyphicon glyphicon-send default')      
  div(id='modal', class='modal fade', tabindex='-1', role='dialog', aria-labelledby='howItWorks', aria-hidden='true')
    div(class='modal-content')
      div(class='modal-header')
        button(type='button', class='close', data-dismiss='modal', aria-hidden='true')&times;
      div(class='modal-body info')
        ul
          li
            h3 How it works: 
          li Enter the information for whom you would like to send an eCard to
          li Select the card type and the date that you would like for the card to be delivered
          li On the desired date, the receipient will receive an email with the specified message, as well as a link to view the card design online. 
      div(class='modal-footer')
        button(type='button' class='btn btn-primary' data-dismiss='modal') Got it!


  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
  script(src='/js/main.js')
  script(src='/js/bootstrap.js')
  